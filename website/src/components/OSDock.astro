---
const { currentPage = 'home' } = Astro.props;

const dockItems = [
  {
    href: '/',
    label: 'Home',
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
      <polyline points="9 22 9 12 15 12 15 22"/>
    </svg>`,
    page: 'home'
  },
  {
    href: '/journey',
    label: 'Journey',
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <polyline points="22 12 18 12 15 21 9 3 6 12 2 12"/>
    </svg>`,
    page: 'journey'
  },
  {
    href: '/writing',
    label: 'Writing',
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/>
      <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/>
    </svg>`,
    page: 'writing'
  },
  {
    href: 'mailto:jack@hexahacks.com',
    label: 'Contact',
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
      <polyline points="22,6 12,13 2,6"/>
    </svg>`,
    page: 'contact'
  },
];
---

<!-- OS Dock Navigation -->
<nav class="os-dock" id="osDock">
  <div class="os-dock-container">
    {dockItems.map((item) => (
      <a
        href={item.href}
        class={`os-dock-item ${currentPage === item.page ? 'active' : ''}`}
        aria-label={item.label}
        data-label={item.label}
      >
        <div class="os-dock-icon" set:html={item.icon} />
        <span class="os-dock-label">{item.label}</span>
      </a>
    ))}
  </div>
</nav>

<!-- Toggle Button for Mobile -->
<button class="os-dock-toggle" id="osDockToggle" aria-label="Toggle navigation">
  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
    <circle cx="12" cy="12" r="1"/>
    <circle cx="12" cy="5" r="1"/>
    <circle cx="12" cy="19" r="1"/>
  </svg>
</button>

<style>
  /* OS Dock Base Styles */
  .os-dock {
    position: fixed;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%) translateY(0);
    z-index: 1000;
    transition: transform 0.3s cubic-bezier(0.4, 0.0, 0.2, 1);
  }

  .os-dock.hidden {
    transform: translateX(-50%) translateY(150%);
  }

  .os-dock-container {
    display: flex;
    gap: 0.5rem;
    padding: 0.75rem 1rem;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(20px) saturate(180%);
    -webkit-backdrop-filter: blur(20px) saturate(180%);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 1.5rem;
    box-shadow:
      0 8px 32px rgba(0, 0, 0, 0.3),
      inset 0 1px 0 rgba(255, 255, 255, 0.2),
      0 0 0 1px rgba(0, 0, 0, 0.1);
  }

  /* Individual Dock Items */
  .os-dock-item {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 3.5rem;
    height: 3.5rem;
    padding: 0.75rem;
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    border-radius: 1rem;
    transition: all 0.2s cubic-bezier(0.4, 0.0, 0.2, 1);
    cursor: pointer;
  }

  /* Enter animation for dock items */
  .os-dock-item.dock-item-enter {
    animation: dockItemEnter 0.5s cubic-bezier(0.4, 0.0, 0.2, 1) backwards;
  }

  @keyframes dockItemEnter {
    from {
      opacity: 0;
      transform: translateY(2rem) scale(0.8);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  .os-dock-item:hover {
    background: rgba(255, 255, 255, 0.15);
    color: rgba(255, 255, 255, 1);
    transform: translateY(-0.5rem) scale(1.1);
  }

  .os-dock-item.active {
    background: rgba(255, 255, 255, 0.2);
    color: rgba(255, 255, 255, 1);
  }

  .os-dock-icon {
    width: 1.5rem;
    height: 1.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .os-dock-icon svg {
    width: 100%;
    height: 100%;
    filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.2));
  }

  /* Dock Labels - Tooltip on Hover */
  .os-dock-label {
    position: absolute;
    bottom: calc(100% + 0.75rem);
    left: 50%;
    transform: translateX(-50%) scale(0.8);
    padding: 0.4rem 0.75rem;
    background: rgba(0, 0, 0, 0.9);
    color: white;
    font-size: 0.75rem;
    font-weight: 500;
    border-radius: 0.5rem;
    white-space: nowrap;
    opacity: 0;
    pointer-events: none;
    transition: all 0.2s cubic-bezier(0.4, 0.0, 0.2, 1);
  }

  .os-dock-label::after {
    content: '';
    position: absolute;
    top: 100%;
    left: 50%;
    transform: translateX(-50%);
    border: 0.4rem solid transparent;
    border-top-color: rgba(0, 0, 0, 0.9);
  }

  .os-dock-item:hover .os-dock-label {
    opacity: 1;
    transform: translateX(-50%) scale(1);
  }

  /* Toggle Button */
  .os-dock-toggle {
    position: fixed;
    bottom: 2rem;
    right: 2rem;
    width: 3rem;
    height: 3rem;
    display: none;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(20px) saturate(180%);
    -webkit-backdrop-filter: blur(20px) saturate(180%);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    color: rgba(255, 255, 255, 0.8);
    cursor: pointer;
    z-index: 999;
    transition: all 0.2s cubic-bezier(0.4, 0.0, 0.2, 1);
    box-shadow:
      0 8px 32px rgba(0, 0, 0, 0.3),
      inset 0 1px 0 rgba(255, 255, 255, 0.2);
  }

  .os-dock-toggle:hover {
    background: rgba(255, 255, 255, 0.15);
    color: rgba(255, 255, 255, 1);
    transform: scale(1.1);
  }

  .os-dock-toggle svg {
    width: 1.25rem;
    height: 1.25rem;
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .os-dock {
      bottom: 1rem;
    }

    .os-dock-toggle {
      display: flex;
      bottom: 1rem;
      right: 1rem;
    }

    .os-dock-container {
      flex-direction: column;
      padding: 1rem 0.75rem;
      gap: 0.25rem;
    }

    .os-dock-item {
      width: 3rem;
      height: 3rem;
      padding: 0.5rem;
    }

    .os-dock-icon {
      width: 1.25rem;
      height: 1.25rem;
    }

    /* Hide labels on mobile */
    .os-dock-label {
      display: none;
    }
  }

  @media (max-width: 576px) {
    .os-dock {
      bottom: 0.5rem;
    }

    .os-dock-toggle {
      bottom: 0.5rem;
      right: 0.5rem;
      width: 2.5rem;
      height: 2.5rem;
    }

    .os-dock-item {
      width: 2.5rem;
      height: 2.5rem;
    }
  }
</style>

<script>
  // Toggle dock visibility on mobile
  const dockToggle = document.getElementById('osDockToggle');
  const dock = document.getElementById('osDock');

  if (dockToggle && dock) {
    dockToggle.addEventListener('click', () => {
      dock.classList.toggle('hidden');
    });

    // Hide dock when clicking on a link (mobile)
    const dockItems = dock.querySelectorAll('.os-dock-item');
    dockItems.forEach(item => {
      item.addEventListener('click', () => {
        if (window.innerWidth <= 768) {
          dock.classList.add('hidden');
        }
      });
    });
  }

  // Auto-hide dock on scroll down, show on scroll up
  let lastScroll = 0;
  const scrollThreshold = 100;

  window.addEventListener('scroll', () => {
    const currentScroll = window.pageYOffset;

    if (Math.abs(currentScroll - lastScroll) < scrollThreshold) {
      return;
    }

    if (currentScroll > lastScroll && currentScroll > 200) {
      // Scrolling down
      dock?.classList.add('hidden');
    } else {
      // Scrolling up
      dock?.classList.remove('hidden');
    }

    lastScroll = currentScroll;
  });
</script>

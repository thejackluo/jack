---
interface Props {
  title: string;
  author: string;
  category: string;
  progress: number;
  score: number;
  pageCount: number;
  color: string;
  gradient?: {
    start: string;
    end: string;
  };
  index: number;
}

const { title, author, category, progress, score, pageCount, color, gradient, index } = Astro.props;

// Calculate spine width based on page count (thicker books have wider spines)
const spineWidth = Math.max(40, Math.min(80, pageCount / 8));
const bookWidth = 220;
const bookHeight = 320;

// Use gradient if available, otherwise solid color
const coverGradient = gradient
  ? `linear-gradient(135deg, ${gradient.start}, ${gradient.end})`
  : color;

const backGradient = gradient
  ? `linear-gradient(135deg, ${gradient.end}, ${gradient.start})`
  : color;
---

<div
  class="book-container"
  data-index={index}
  style={`--spine-width: ${spineWidth}px; --book-width: ${bookWidth}px; --book-height: ${bookHeight}px;`}
>
  <div class="book">
    <div class="book-spine" style={`background: linear-gradient(to bottom, ${color}, ${gradient?.end || color})`}>
      <span class="spine-text">{title}</span>
    </div>
    <div class="book-cover glassmorphic" style={`background: ${coverGradient}`}>
      <div class="book-content">
        <h3 class="book-title">{title}</h3>
        <p class="book-author">{author}</p>
        <p class="book-category">{category}</p>
        <div class="progress-container">
          <div class="progress-label">Progress: {progress}%</div>
          <div class="progress-bar">
            <div class="progress-fill" style={`width: ${progress}%`}></div>
          </div>
        </div>
        {score > 0 && (
          <div class="score">
            <span class="score-label">Rating:</span>
            <span class="stars">{'‚≠ê'.repeat(score)}</span>
          </div>
        )}
        <div class="page-count">{pageCount} pages</div>
      </div>
    </div>
    <div class="book-pages"></div>
    <div class="book-back glassmorphic" style={`background: ${backGradient}`}>
      <div class="book-back-content">
        <p class="back-text">"{title}"</p>
        <p class="back-author">by {author}</p>
      </div>
    </div>
  </div>
</div>

<style>
  .book-container {
    position: relative;
    width: var(--spine-width);
    height: var(--book-height);
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;
    margin: 0;
    /* Ensure container height matches book height exactly */
    box-sizing: border-box;
    flex-shrink: 0;
    min-width: var(--spine-width);
  }

  /* Small movement on hover - reduced to 5-8px */
  .book-container.spread-left-hover {
    transform: translateX(-6px);
    transition: transform 0.3s ease;
  }

  .book-container.spread-right-hover {
    transform: translateX(6px);
    transition: transform 0.3s ease;
  }

  /* More movement when book is selected */
  .book-container.spread-left {
    transform: translateX(-80px);
  }

  .book-container.spread-right {
    transform: translateX(80px);
  }

  /* Fade out other books when one is selected (mobile) */
  .book-container.fade-out {
    opacity: 0;
    pointer-events: none;
    transform: scale(0.8);
    transition: opacity 0.4s ease, transform 0.4s ease;
  }

  /* Move books completely off-screen when one is selected (desktop) - NO FADE */
  .book-container.move-out-left {
    transform: translateX(-200%);
    /* NO opacity - desktop should only move, not fade */
    transition: transform 0.5s ease;
  }

  .book-container.move-out-right {
    transform: translateX(200%);
    /* NO opacity - desktop should only move, not fade */
    transition: transform 0.5s ease;
  }

  .book-container.selected {
    z-index: 100;
    width: var(--book-width);
    /* Ensure selected book is fully visible */
    position: relative;
    min-width: var(--book-width);
  }

  /* On mobile, ensure selected book can be centered */
  @media (max-width: 768px) {
    .book-container.selected {
      /* Allow transform for physical centering */
      min-width: var(--book-width);
      position: relative;
    }
  }

  /* Ensure desktop books also expand properly */
  @media (min-width: 769px) {
    .book-container.selected {
      min-width: var(--book-width);
    }
  }

  /* Remove width expansion on hover - only rotate book, don't expand container */
  /* Width expansion only happens on selection, not hover */

  .book {
    width: var(--book-width);
    height: var(--book-height);
    position: absolute;
    left: calc(-1 * (var(--book-width) - var(--spine-width)) / 2);
    transform-style: preserve-3d;
    transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
    transform: rotateY(90deg);
  }

  .book-container:hover .book {
    transform: rotateY(85deg);
  }

  .book-container.selected .book {
    transform: rotateY(0deg);
  }

  .book-container.selected:hover .book {
    transform: rotateY(-5deg);
  }

  .book-cover,
  .book-back,
  .book-spine,
  .book-pages {
    position: absolute;
    backface-visibility: hidden;
  }

  .book-cover {
    width: var(--book-width);
    height: var(--book-height);
    transform: rotateY(0deg) translateZ(calc(var(--spine-width) / 2));
    border-radius: 8px;
    padding: 20px;
    box-sizing: border-box; /* Include padding in height calculation */
    box-shadow:
      0 10px 30px rgba(0, 0, 0, 0.5),
      inset 0 1px 0 rgba(255, 255, 255, 0.2);
  }

  .glassmorphic {
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .book-content {
    color: white;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
    height: 100%;
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .book-title {
    font-family: "Dual-300", sans-serif;
    font-size: 20px;
    font-weight: bold;
    margin: 0;
    line-height: 1.2;
  }

  .book-author {
    font-family: "Stellar", "Century Gothic", sans-serif;
    font-size: 14px;
    opacity: 0.9;
    margin: 0;
  }

  .book-category {
    font-family: "Stellar", "Century Gothic", sans-serif;
    font-size: 11px;
    opacity: 0.7;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin: 0;
  }

  .progress-container {
    margin-top: auto;
  }

  .progress-label {
    font-size: 11px;
    margin-bottom: 4px;
  }

  .progress-bar {
    height: 8px;
    background: rgba(0, 0, 0, 0.3);
    border-radius: 4px;
    overflow: hidden;
    box-shadow: inset 0 2px 4px rgba(0, 0, 0, 0.2);
  }

  .progress-fill {
    height: 100%;
    background: linear-gradient(90deg, #00ffff, #00ccff);
    transition: width 0.3s ease;
    box-shadow: 0 0 10px rgba(0, 255, 255, 0.5);
  }

  .score {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 11px;
  }

  .stars {
    font-size: 12px;
  }

  .page-count {
    font-size: 10px;
    opacity: 0.6;
  }

  .book-back {
    width: var(--book-width);
    height: var(--book-height);
    transform: rotateY(180deg) translateZ(calc(var(--spine-width) / 2));
    border-radius: 8px;
    padding: 20px;
    box-sizing: border-box; /* Include padding in height calculation */
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow:
      0 10px 30px rgba(0, 0, 0, 0.5),
      inset 0 1px 0 rgba(255, 255, 255, 0.2);
  }

  .book-back-content {
    color: white;
    text-align: center;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
  }

  .back-text {
    font-size: 14px;
    font-style: italic;
    margin-bottom: 10px;
  }

  .back-author {
    font-size: 12px;
    opacity: 0.8;
  }

  .book-spine {
    width: var(--spine-width);
    height: var(--book-height);
    left: calc((var(--book-width) - var(--spine-width)) / 2);
    transform: rotateY(-90deg) translateZ(calc(var(--book-width) / 2));
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 4px;
    box-shadow:
      0 10px 30px rgba(0, 0, 0, 0.5),
      inset -2px 0 5px rgba(0, 0, 0, 0.3),
      inset 2px 0 5px rgba(255, 255, 255, 0.1);
    /* Ensure spine height matches cover height exactly */
    box-sizing: border-box;
  }

  .spine-text {
    writing-mode: vertical-rl;
    text-orientation: mixed;
    font-family: "Dual-300", sans-serif;
    font-size: 14px;
    font-weight: bold;
    color: white;
    text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.8);
    padding: 10px 5px;
    text-align: center;
  }

  .book-pages {
    width: var(--spine-width);
    height: var(--book-height);
    left: calc((var(--book-width) - var(--spine-width)) / 2);
    transform: rotateY(90deg) translateZ(calc(var(--book-width) / 2));
    background-image: repeating-linear-gradient(
      90deg,
      #f8f8f8,
      #f8f8f8 1px,
      #e8e8e8 1px,
      #e8e8e8 2px
    );
    border-left: 2px solid rgba(0, 0, 0, 0.2);
    border-right: 2px solid rgba(0, 0, 0, 0.2);
    border-radius: 2px;
  }
</style>

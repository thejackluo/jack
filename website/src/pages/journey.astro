<script>
  // Timeline Filter
  document.addEventListener('DOMContentLoaded', () => {
    const filterSelect = document.getElementById('timeline-filter') as HTMLSelectElement;
    const timelineItems = document.querySelectorAll('.timeline-item');
    const visibleCount = document.getElementById('visible-count');

    if (filterSelect) {
      filterSelect.addEventListener('change', () => {
        const filterValue = filterSelect.value;
        let count = 0;

        timelineItems.forEach(item => {
          const tags = (item as HTMLElement).dataset.tags || '';
          const tagArray = tags.split(',');

          if (filterValue === 'all' || tagArray.includes(filterValue)) {
            item.classList.remove('hidden');
            count++;
          } else {
            item.classList.add('hidden');
          }
        });

        if (visibleCount) {
          visibleCount.textContent = count.toString();
        }
      });
    }
  });
</script>

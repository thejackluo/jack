---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/Base.astro';

// Get all projects
const allProjects = await getCollection('projects');

// Process projects
const projects = allProjects
  .map(project => {
    const startDate = new Date(project.data.startDate);
    const endDate = project.data.endDate ? new Date(project.data.endDate) : null;

    return {
      ...project,
      // Calculate project duration for display
      duration: endDate
        ? `${startDate.getFullYear()} - ${endDate.getFullYear()}`
        : `${startDate.getFullYear()} - Present`,
    };
  })
  .sort((a, b) => {
    // Sort by start date, newest first
    const aDate = new Date(a.data.startDate);
    const bDate = new Date(b.data.startDate);
    return bDate.getTime() - aDate.getTime();
  });

// Get all unique categories
const allCategories = [...new Set(projects.map(project => project.data.category))].sort();

// Get all unique statuses
const allStatuses = [...new Set(projects.map(project => project.data.status))].sort();

// Get all unique tech tags
const allTech = [...new Set(projects.flatMap(project => project.data.tech))].sort();
---

<BaseLayout
  title="Projects - Jack Luo"
  description="Projects, experiments, and ventures across AI, energy, security, and community."
  currentPage="projects"
>
  <section id="projects-section">
    <div class="container-fluid">
      <!-- Page Title -->
      <div class="row">
        <div class="col-12">
          <div class="projects-page-header">
            <h1>All Projects</h1>
          </div>
        </div>
      </div>

      <div class="row content-row">
        <!-- Left Sidebar -->
        <div class="col-12 col-lg-3 sidebar-container">
          <div class="sidebar-content">
            <!-- Sidebar Title -->
            <div class="sidebar-header">
              <h4>Filters</h4>
            </div>

            <!-- Search -->
            <div class="filter-group">
              <h5 class="filter-label">Search</h5>
              <input
                type="text"
                id="search-input"
                placeholder="Search projects..."
                class="search-input glass-input"
              />
            </div>

            <!-- Sort Options -->
            <div class="filter-group">
              <h5 class="filter-label">Sort By</h5>
              <select id="sort-select" class="sort-select glass-input">
                <option value="date-desc">Newest First</option>
                <option value="date-asc">Oldest First</option>
                <option value="title-asc">Title (A-Z)</option>
                <option value="title-desc">Title (Z-A)</option>
              </select>
            </div>

            <!-- Filter by Category -->
            <div class="filter-group">
              <h5 class="filter-label">Category</h5>
              <select id="category-select" class="category-select glass-input">
                <option value="all">All Categories</option>
                {allCategories.map(category => (
                  <option value={category}>{category}</option>
                ))}
              </select>
            </div>

            <!-- Filter by Status -->
            <div class="filter-group">
              <h5 class="filter-label">Status</h5>
              <select id="status-select" class="status-select glass-input">
                <option value="all">All Statuses</option>
                {allStatuses.map(status => (
                  <option value={status}>{status}</option>
                ))}
              </select>
            </div>

            <!-- Filter by Tech -->
            <div class="filter-group">
              <h5 class="filter-label">Technology</h5>
              <select id="tech-select" class="tech-select glass-input">
                <option value="all">All Technologies</option>
                {allTech.map(tech => (
                  <option value={tech}>{tech}</option>
                ))}
              </select>
            </div>

            <!-- Project Count -->
            <div class="project-count-container">
              <p class="project-count">
                <span id="visible-count">{projects.length}</span> {projects.length === 1 ? 'project' : 'projects'}
              </p>
            </div>
          </div>
        </div>

        <!-- Main Content -->
        <div class="col-12 col-lg-9 project-content-container">
          <div class="project-list" id="project-grid">
            {projects.map(project => (
              <article
                class="project-card"
                data-title={project.data.title.toLowerCase()}
                data-summary={project.data.summary.toLowerCase()}
                data-category={project.data.category}
                data-status={project.data.status}
                data-tech={project.data.tech.join(',')}
                data-featured={project.data.featured.toString()}
              >
                <a href={`/projects/${project.slug}`} class="project-card-link">
                  <div class="project-card-content">
                    <div class="project-card-header">
                      <h3 class="project-card-title">{project.data.title}</h3>
                      <div class="project-badges">
                        {project.data.featured && (
                          <span class="badge-featured">Featured</span>
                        )}
                        <span class={`badge-status status-${project.data.status.toLowerCase()}`}>
                          {project.data.status}
                        </span>
                      </div>
                    </div>

                    <p class="project-card-role">{project.data.role}</p>

                    <p class="project-card-summary">{project.data.summary}</p>

                    <div class="project-card-meta">
                      <span class="project-meta-category">{project.data.category}</span>
                      <span class="meta-separator">â€¢</span>
                      <span class="project-meta-duration">{project.duration}</span>
                    </div>

                    <div class="project-card-tech">
                      {project.data.tech.slice(0, 4).map(tech => (
                        <span class="tech-tag">{tech}</span>
                      ))}
                      {project.data.tech.length > 4 && (
                        <span class="tech-tag-more">+{project.data.tech.length - 4} more</span>
                      )}
                    </div>
                  </div>
                </a>
              </article>
            ))}
          </div>

          <div id="no-results" class="no-results" style="display: none;">
            <p>No projects found matching your criteria.</p>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>


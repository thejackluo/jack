<script>
  // Client-side filtering and search functionality
  const searchInput = document.getElementById('search-input') as HTMLInputElement;
  const sortSelect = document.getElementById('sort-select') as HTMLSelectElement;
  const categorySelect = document.getElementById('category-select') as HTMLSelectElement;
  const statusSelect = document.getElementById('status-select') as HTMLSelectElement;
  const techSelect = document.getElementById('tech-select') as HTMLSelectElement;
  const projectGrid = document.getElementById('project-grid');
  const visibleCount = document.getElementById('visible-count');
  const noResults = document.getElementById('no-results');

  let currentSearch = '';
  let currentCategory = 'all';
  let currentStatus = 'all';
  let currentTech = 'all';
  let currentSort = 'date-desc';

  // Search functionality
  searchInput?.addEventListener('input', (e) => {
    currentSearch = (e.target as HTMLInputElement).value.toLowerCase();
    filterAndSortProjects();
  });

  // Sort functionality
  sortSelect?.addEventListener('change', (e) => {
    currentSort = (e.target as HTMLSelectElement).value;
    filterAndSortProjects();
  });

  // Category filter
  categorySelect?.addEventListener('change', (e) => {
    currentCategory = (e.target as HTMLSelectElement).value;
    filterAndSortProjects();
  });

  // Status filter
  statusSelect?.addEventListener('change', (e) => {
    currentStatus = (e.target as HTMLSelectElement).value;
    filterAndSortProjects();
  });

  // Tech filter
  techSelect?.addEventListener('change', (e) => {
    currentTech = (e.target as HTMLSelectElement).value;
    filterAndSortProjects();
  });

  function filterAndSortProjects() {
    const projectCards = Array.from(document.querySelectorAll('.project-card')) as HTMLElement[];
    let visibleProjects = 0;

    // Filter projects
    projectCards.forEach(card => {
      const title = card.getAttribute('data-title') || '';
      const summary = card.getAttribute('data-summary') || '';
      const category = card.getAttribute('data-category') || '';
      const status = card.getAttribute('data-status') || '';
      const tech = card.getAttribute('data-tech') || '';

      const matchesSearch = !currentSearch ||
        title.includes(currentSearch) ||
        summary.includes(currentSearch);

      const matchesCategory = currentCategory === 'all' ||
        category === currentCategory;

      const matchesStatus = currentStatus === 'all' ||
        status === currentStatus;

      const matchesTech = currentTech === 'all' ||
        tech.split(',').includes(currentTech);

      const isVisible = matchesSearch && matchesCategory && matchesStatus && matchesTech;

      if (isVisible) {
        card.style.display = 'block';
        visibleProjects++;
      } else {
        card.style.display = 'none';
      }
    });

    // Sort visible projects
    const visibleCards = projectCards.filter(card => card.style.display !== 'none');

    visibleCards.sort((a, b) => {
      const titleA = a.getAttribute('data-title') || '';
      const titleB = b.getAttribute('data-title') || '';

      switch (currentSort) {
        case 'date-asc':
          return 0; // Reverse order
        case 'title-asc':
          return titleA.localeCompare(titleB);
        case 'title-desc':
          return titleB.localeCompare(titleA);
        default: // date-desc
          return 0;
      }
    });

    // Re-append sorted cards
    if (projectGrid) {
      visibleCards.forEach(card => projectGrid.appendChild(card));
    }

    // Update count
    if (visibleCount) {
      visibleCount.textContent = visibleProjects.toString();
    }

    // Show/hide no results message
    if (noResults) {
      noResults.style.display = visibleProjects === 0 ? 'block' : 'none';
    }
  }
</script>

---
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import BaseLayout from '../../layouts/Base.astro';

export async function getStaticPaths() {
  const projectEntries = await getCollection('projects');

  return projectEntries.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

interface Props {
  entry: CollectionEntry<'projects'>;
}

const { entry } = Astro.props;
const { Content } = await entry.render();

// Format dates
const startDateObj = new Date(entry.data.startDate);
const startDate = startDateObj.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
});

const endDate = entry.data.endDate
  ? new Date(entry.data.endDate).toLocaleDateString('en-US', {
      year: 'numeric',
      month: 'short',
    })
  : 'Present';

const duration = `${startDate} - ${endDate}`;
---

<BaseLayout
  title={`${entry.data.title} - Jack Luo`}
  description={entry.data.summary}
  currentPage="projects"
>
  <article id="project-detail-section">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <!-- Back Link -->
          <div class="back-link-container">
            <a href="/projects" class="back-link">
              <h5>← Projects</h5>
            </a>
          </div>

          <!-- Project Header -->
          <header class="project-header">
            <div class="project-header-top">
              <h2 class="project-title">{entry.data.title}</h2>
              <div class="project-badges">
                {entry.data.featured && (
                  <span class="badge-featured">Featured</span>
                )}
                {entry.data.status && (
                  <span class={`badge-status status-${entry.data.status.toLowerCase()}`}>
                    {entry.data.status}
                  </span>
                )}
              </div>
            </div>

            <p class="project-role">{entry.data.role}</p>

            <div class="project-meta">
              <span class="project-meta-category">{entry.data.category}</span>
              <span class="meta-separator">•</span>
              <span class="project-meta-duration">{duration}</span>
            </div>

            <div class="project-summary-box">
              <p class="project-summary">{entry.data.summary}</p>
            </div>

            <div class="project-tech">
              {entry.data.tech.map(tech => (
                <span class="tech-tag">{tech}</span>
              ))}
            </div>

            {entry.data.links.length > 0 && (
              <div class="project-links">
                {entry.data.links.map(link => {
                  const isGithub = link.url.includes('github.com');
                  return (
                    <a href={link.url} target="_blank" rel="noopener noreferrer" class="project-link-button">
                      {isGithub ? (
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                        </svg>
                      ) : (
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                          <circle cx="12" cy="12" r="10"/>
                          <line x1="2" y1="12" x2="22" y2="12"/>
                          <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/>
                        </svg>
                      )}
                      {link.label}
                    </a>
                  );
                })}
              </div>
            )}
          </header>

          <!-- Project Gallery (if exists) -->
          {entry.data.gallery.length > 0 && (
            <section class="project-gallery">
              {entry.data.gallery.map(image => (
                <figure class="gallery-item">
                  <img src={image.src} alt={image.alt} />
                  {image.caption && <figcaption>{image.caption}</figcaption>}
                </figure>
              ))}
            </section>
          )}

          <!-- Project Content -->
          <div class="project-content">
            <Content />
          </div>

          <!-- Project Footer -->
          <footer class="project-footer">
            <div class="project-footer-divider"></div>

            <div class="project-footer-content">
              <p>
                Interested in this project? <a href="mailto:jack@hexahacks.com" class="a-underline">Let's chat</a>.
              </p>
            </div>

            <div class="back-link-footer-container">
              <a href="/projects" class="back-link-footer">
                <h5>← Back to all projects</h5>
              </a>
            </div>
          </footer>
        </div>
      </div>
    </div>
  </article>
</BaseLayout>

<style>
  /* Link to existing CSS files */
  @import url('/src/css/writing.css');
  @import url('/src/css/blog.css');

  /* Hide the default landing section for project pages */
  :global(#landing) {
    height: auto !important;
    min-height: auto !important;
  }

  :global(.landing-container) {
    height: auto !important;
    position: relative !important;
  }

  /* Project Detail Section */
  #project-detail-section {
    background: linear-gradient(
        180deg,
        rgba(217, 217, 217, 0.05) 0%,
        rgba(217, 217, 217, 0) 100%
      ),
      linear-gradient(180deg, #000000 0%, #14123c 100%);
    min-height: 100vh;
    padding: 2rem 0 5rem 0;
  }

  /* Back Link Container */
  .back-link-container {
    max-width: 900px;
    margin: 0 auto 2rem auto;
    padding: 0 1rem;
  }

  .back-link {
    text-decoration: none;
    display: inline-block;
    transition: all 0.3s ease;
  }

  .back-link h5 {
    color: rgba(255, 255, 255, 0.8);
    text-align: left;
    margin: 0;
  }

  .back-link:hover h5 {
    color: white;
    text-shadow: 0px 0px 20px rgba(255, 255, 255, 0.6);
  }

  /* Project Header */
  .project-header {
    max-width: 900px;
    margin: 0 auto 3rem auto;
    padding: 0 1rem;
  }

  .project-header-top {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 1.5rem;
    margin-bottom: 1rem;
  }

  .project-title {
    font-family: "Dual-300";
    font-size: 2.75rem;
    color: white;
    margin: 0;
    line-height: 1.2;
    text-align: left;
    display: block;
    flex: 1;
  }

  .project-badges {
    display: flex;
    gap: 0.5rem;
    flex-shrink: 0;
    flex-wrap: wrap;
  }

  .badge-featured,
  .badge-status {
    display: inline-block;
    padding: 0.45rem 0.9rem;
    border-radius: 0.5rem;
    font-family: "Stellar", "Century Gothic", sans-serif;
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .badge-featured {
    background: linear-gradient(135deg, rgba(255, 215, 0, 0.2) 0%, rgba(255, 165, 0, 0.2) 100%);
    border: 1px solid rgba(255, 215, 0, 0.4);
    color: rgba(255, 215, 0, 1);
  }

  .badge-status {
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .status-ongoing {
    background: rgba(0, 255, 127, 0.15);
    border-color: rgba(0, 255, 127, 0.4);
    color: rgba(0, 255, 127, 1);
  }

  .status-completed {
    background: rgba(100, 149, 237, 0.15);
    border-color: rgba(100, 149, 237, 0.4);
    color: rgba(100, 149, 237, 1);
  }

  .status-archived {
    background: rgba(169, 169, 169, 0.15);
    border-color: rgba(169, 169, 169, 0.4);
    color: rgba(169, 169, 169, 1);
  }

  .project-role {
    font-family: "Stellar", "Century Gothic", sans-serif;
    font-size: 1.1rem;
    color: rgba(255, 255, 255, 0.85);
    margin: 0 0 1.5rem 0;
    text-align: left;
    font-style: italic;
  }

  .project-meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1.5rem;
    flex-wrap: wrap;
  }

  .project-meta-category,
  .project-meta-duration {
    font-family: "Stellar", "Century Gothic", sans-serif;
    font-size: 1rem;
    color: rgba(255, 255, 255, 0.8);
  }

  .meta-separator {
    color: rgba(255, 255, 255, 0.5);
    font-family: "Stellar", "Century Gothic", sans-serif;
  }

  .project-summary-box {
    background: radial-gradient(
      50% 50% at 50% 50%,
      rgba(255, 255, 255, 0.05) 0%,
      rgba(255, 255, 255, 0.1) 100%
    );
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 0.75rem;
    padding: 1.5rem;
    margin: 1.5rem 0;
    backdrop-filter: blur(10px);
  }

  .project-summary {
    font-family: "Stellar", "Century Gothic", sans-serif;
    font-size: 1.15rem;
    line-height: 1.7;
    color: rgba(255, 255, 255, 0.95);
    margin: 0;
    text-align: left;
  }

  .project-tech {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    margin: 1.5rem 0;
  }

  .tech-tag {
    display: inline-block;
    padding: 0.5rem 1rem;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 0.5rem;
    font-family: "Stellar", "Century Gothic", sans-serif;
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(5px);
    transition: all 0.2s;
    margin: 0;
  }

  .tech-tag:hover {
    background: rgba(255, 255, 255, 0.15);
    border-color: rgba(255, 255, 255, 0.3);
  }

  .project-links {
    display: flex;
    flex-wrap: wrap;
    gap: 1.25rem;
    margin: 1.5rem 0;
  }

  .project-link-button {
    display: inline-flex;
    align-items: center;
    gap: 0.6rem;
    padding: 0.85rem 1.75rem;
    background: linear-gradient(
      135deg,
      rgba(100, 149, 237, 0.2) 0%,
      rgba(70, 130, 180, 0.15) 100%
    );
    border: 1.5px solid rgba(100, 149, 237, 0.4);
    border-radius: 0.6rem;
    font-family: "Stellar", "Century Gothic", sans-serif;
    font-size: 1rem;
    font-weight: 500;
    color: white;
    text-decoration: none;
    backdrop-filter: blur(10px);
    transition: all 0.3s ease;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
  }

  .project-link-button:hover {
    background: linear-gradient(
      135deg,
      rgba(100, 149, 237, 0.3) 0%,
      rgba(70, 130, 180, 0.25) 100%
    );
    border-color: rgba(100, 149, 237, 0.6);
    box-shadow: 0 4px 16px rgba(100, 149, 237, 0.3);
    transform: translateY(-3px);
  }

  .project-link-button svg {
    width: 18px;
    height: 18px;
    flex-shrink: 0;
  }

  /* Project Gallery */
  .project-gallery {
    max-width: 900px;
    margin: 0 auto 3rem auto;
    padding: 0 1rem;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
  }

  .gallery-item {
    margin: 0;
  }

  .gallery-item img {
    width: 100%;
    height: auto;
    border-radius: 0.75rem;
    border: 1px solid rgba(255, 255, 255, 0.1);
    filter: drop-shadow(0px 4px 20px rgba(0, 0, 0, 0.3));
  }

  .gallery-item figcaption {
    font-family: "Stellar", "Century Gothic", sans-serif;
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.6);
    text-align: center;
    margin-top: 0.75rem;
    font-style: italic;
  }

  /* Project Content Styles */
  .project-content {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 1rem;
    font-family: "Stellar", "Century Gothic", sans-serif;
    font-size: 1.125rem;
    line-height: 1.8;
    color: rgba(255, 255, 255, 0.9);
  }

  /* Typography */
  .project-content :global(h1),
  .project-content :global(h2),
  .project-content :global(h3),
  .project-content :global(h4),
  .project-content :global(h5),
  .project-content :global(h6) {
    font-family: "Dual-300";
    font-weight: 600;
    line-height: 1.3;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    color: white;
    text-align: left;
    display: block;
  }

  .project-content :global(h1:first-of-type),
  .project-content :global(h2:first-of-type),
  .project-content :global(h3:first-of-type) {
    margin-top: 1rem;
  }

  .project-content :global(h1) {
    font-size: 2rem;
    font-weight: 700;
  }

  .project-content :global(h2) {
    font-size: 2.25rem;
    font-weight: 600;
  }

  .project-content :global(h3) {
    font-size: 1.5rem;
    font-weight: 600;
  }

  .project-content :global(h4) {
    font-size: 1.25rem;
    font-weight: 600;
  }

  .project-content :global(h5) {
    font-size: 1.1rem;
    font-weight: 600;
  }

  .project-content :global(h6) {
    font-size: 1rem;
    font-weight: 600;
  }

  .project-content :global(p) {
    margin-bottom: 1.5rem;
    color: rgba(255, 255, 255, 0.9);
    text-align: left;
  }

  .project-content :global(strong),
  .project-content :global(b) {
    font-weight: 700;
    color: rgba(255, 255, 255, 1);
  }

  .project-content :global(em),
  .project-content :global(i) {
    font-style: italic;
  }

  /* Links */
  .project-content :global(a) {
    color: rgba(255, 255, 255, 0.95);
    text-decoration: underline;
    transition: all 0.2s;
  }

  .project-content :global(a:hover) {
    color: white;
    text-shadow: 0px 0px 10px rgba(255, 255, 255, 0.6);
  }

  /* Lists */
  .project-content :global(ul),
  .project-content :global(ol) {
    margin-bottom: 1.5rem;
    padding-left: 2rem;
  }

  .project-content :global(li) {
    margin-bottom: 0.75rem;
    line-height: 1.7;
    color: rgba(255, 255, 255, 0.9);
  }

  .project-content :global(ul) {
    list-style-type: disc;
  }

  .project-content :global(ol) {
    list-style-type: decimal;
  }

  /* Blockquotes */
  .project-content :global(blockquote) {
    border-left: 4px solid rgba(255, 255, 255, 0.4);
    padding-left: 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    color: rgba(255, 255, 255, 0.7);
  }

  /* Code */
  .project-content :global(code) {
    background: rgba(255, 255, 255, 0.1);
    padding: 0.2em 0.4em;
    border-radius: 3px;
    font-family: 'Courier New', Courier, monospace;
    font-size: 0.9em;
    color: rgba(255, 255, 255, 0.95);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .project-content :global(pre) {
    background: rgba(0, 0, 0, 0.5);
    border: 1px solid rgba(255, 255, 255, 0.2);
    color: rgba(255, 255, 255, 0.9);
    padding: 1.5rem;
    border-radius: 8px;
    overflow-x: auto;
    margin: 2rem 0;
  }

  .project-content :global(pre code) {
    background: none;
    padding: 0;
    border: none;
    color: inherit;
    font-size: 0.9rem;
  }

  /* Images */
  .project-content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 2rem 0;
    display: block;
    filter: drop-shadow(0px 0px 20px rgba(255, 255, 255, 0.1));
  }

  /* Horizontal Rule */
  .project-content :global(hr) {
    border: none;
    border-top: 1px solid rgba(255, 255, 255, 0.2);
    margin: 3rem 0;
  }

  /* Tables */
  .project-content :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: 2rem 0;
  }

  .project-content :global(th),
  .project-content :global(td) {
    padding: 0.75rem;
    border: 1px solid rgba(255, 255, 255, 0.2);
    text-align: left;
    color: rgba(255, 255, 255, 0.85);
  }

  .project-content :global(th) {
    background: rgba(255, 255, 255, 0.1);
    font-weight: bold;
    color: white;
  }

  /* Project Footer */
  .project-footer {
    max-width: 900px;
    margin: 4rem auto 0 auto;
    padding: 0 1rem;
  }

  .project-footer-divider {
    border-top: 1px solid rgba(255, 255, 255, 0.2);
    margin-bottom: 2rem;
  }

  .project-footer-content {
    text-align: center;
    margin-bottom: 2rem;
  }

  .project-footer-content p {
    font-family: "Stellar", "Century Gothic", sans-serif;
    font-size: 1rem;
    color: rgba(255, 255, 255, 0.7);
  }

  .back-link-footer-container {
    text-align: center;
  }

  .back-link-footer {
    text-decoration: none;
    display: inline-block;
    transition: all 0.3s ease;
  }

  .back-link-footer h5 {
    color: rgba(255, 255, 255, 0.8);
  }

  .back-link-footer:hover h5 {
    color: white;
    text-shadow: 0px 0px 20px rgba(255, 255, 255, 0.6);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    #project-detail-section {
      padding: 2rem 0 4rem 0;
    }

    .project-title {
      font-size: 2rem;
    }

    .project-header-top {
      flex-direction: column;
      align-items: flex-start;
    }

    .project-content {
      font-size: 1.05rem;
    }

    .project-content :global(h2) {
      font-size: 2rem;
    }

    .project-content :global(h3) {
      font-size: 1.25rem;
    }

    .project-gallery {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 576px) {
    .project-title {
      font-size: 1.75rem;
    }

    .project-content {
      font-size: 1rem;
    }

    .project-meta {
      font-size: 0.9rem;
    }
  }
</style>

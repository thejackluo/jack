  .filter-group {
    margin-bottom: 2rem;
  }

  .filter-label {
    color: white;
    font-family: "Stellar", "Century Gothic", sans-serif;
    font-size: 1rem;
    margin-bottom: 0.75rem;
    display: block;
    text-align: left;

---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/Base.astro';
import { calculateReadingTime, formatReadingTime } from '../../utils/reading-time';

// Get all blog posts
const allBlogs = await getCollection('blogs');

// Filter out drafts and process blogs
const blogs = allBlogs
  .filter(blog => {
    // Filter out known draft posts
    const draftSlugs = ['three-weeks-in-a-hacker-house', 'jack', 'luo'];
    return !draftSlugs.includes(blog.slug);
  })
  .map(blog => ({
    ...blog,
    readingTime: calculateReadingTime(blog.body),
  }))
  .sort((a, b) => {
    // Sort by publish date, newest first
    return b.data.publishDate.getTime() - a.data.publishDate.getTime();
  });

// Get all unique tags
const allTags = [...new Set(blogs.flatMap(blog => blog.data.tags))].sort();

// Get all years for filtering
const allYears = [...new Set(blogs.map(blog => blog.data.publishDate.getFullYear()))].sort((a, b) => b - a);
---

<BaseLayout
  title="Writing - Jack Luo"
  description="Essays, thoughts, and reflections on startups, technology, and life."
  currentPage="writing"
>
  <div class="writing-container">
    <div class="writing-header">
      <h1>Writing</h1>
      <p class="writing-subtitle">Essays, thoughts, and reflections on startups, technology, and life.</p>
    </div>

    <div class="writing-layout">
      <!-- Sidebar -->
      <aside class="writing-sidebar">
        <!-- Search -->
        <div class="sidebar-section">
          <h3>Search</h3>
          <input
            type="text"
            id="search-input"
            placeholder="Search posts..."
            class="search-input"
          />
        </div>

        <!-- Sort Options -->
        <div class="sidebar-section">
          <h3>Sort By</h3>
          <select id="sort-select" class="sort-select">
            <option value="date-desc">Newest First</option>
            <option value="date-asc">Oldest First</option>
            <option value="title-asc">Title (A-Z)</option>
            <option value="title-desc">Title (Z-A)</option>
            <option value="reading-time-asc">Shortest Read</option>
            <option value="reading-time-desc">Longest Read</option>
          </select>
        </div>

        <!-- Filter by Tags -->
        <div class="sidebar-section">
          <h3>Filter by Tag</h3>
          <div class="tag-filters">
            <button class="tag-filter active" data-tag="all">All</button>
            {allTags.map(tag => (
              <button class="tag-filter" data-tag={tag}>
                {tag}
              </button>
            ))}
          </div>
        </div>

        <!-- Filter by Year -->
        <div class="sidebar-section">
          <h3>Filter by Year</h3>
          <div class="year-filters">
            <button class="year-filter active" data-year="all">All Years</button>
            {allYears.map(year => (
              <button class="year-filter" data-year={year.toString()}>
                {year}
              </button>
            ))}
          </div>
        </div>
      </aside>

      <!-- Main Content -->
      <main class="writing-main">
        <div class="blog-count">
          <span id="visible-count">{blogs.length}</span> {blogs.length === 1 ? 'post' : 'posts'}
        </div>

        <div class="blog-grid" id="blog-grid">
          {blogs.map(blog => (
            <article
              class="blog-card"
              data-title={blog.data.title.toLowerCase()}
              data-excerpt={blog.data.excerpt.toLowerCase()}
              data-tags={blog.data.tags.join(',')}
              data-year={blog.data.publishDate.getFullYear().toString()}
              data-reading-time={blog.readingTime.toString()}
            >
              <a href={`/writing/${blog.slug}`} class="blog-card-link">
                <div class="blog-card-content">
                  <h2 class="blog-card-title">{blog.data.title}</h2>

                  <p class="blog-card-excerpt">{blog.data.excerpt}</p>

                  <div class="blog-card-meta">
                    <time datetime={blog.data.publishDate.toISOString()}>
                      {blog.data.publishDate.toLocaleDateString('en-US', {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric'
                      })}
                    </time>
                    <span class="meta-separator">â€¢</span>
                    <span class="reading-time">{formatReadingTime(blog.readingTime)}</span>
                  </div>

                  <div class="blog-card-tags">
                    {blog.data.tags.map(tag => (
                      <span class="blog-tag">{tag}</span>
                    ))}
                  </div>
                </div>
              </a>
            </article>
          ))}
        </div>

        <div id="no-results" class="no-results" style="display: none;">
          <p>No posts found matching your criteria.</p>
        </div>
      </main>
    </div>
  </div>
</BaseLayout>

<style>
  .writing-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .writing-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .writing-header h1 {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    color: #1a1a1a;
  }

  .writing-subtitle {
    font-size: 1.25rem;
    color: #666;
    max-width: 600px;
    margin: 0 auto;
  }

  .writing-layout {
    display: grid;
    grid-template-columns: 280px 1fr;
    gap: 3rem;
    align-items: start;
  }

  /* Sidebar Styles */
  .writing-sidebar {
    position: sticky;
    top: 2rem;
    padding: 1.5rem;
    background: #f8f9fa;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  }

  .sidebar-section {
    margin-bottom: 2rem;
  }

  .sidebar-section:last-child {
    margin-bottom: 0;
  }

  .sidebar-section h3 {
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: #333;
    margin-bottom: 0.75rem;
  }

  .search-input {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid #ddd;
    border-radius: 8px;
    font-size: 0.95rem;
    transition: border-color 0.2s;
  }

  .search-input:focus {
    outline: none;
    border-color: #4a90e2;
  }

  .sort-select {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid #ddd;
    border-radius: 8px;
    font-size: 0.95rem;
    background: white;
    cursor: pointer;
  }

  .tag-filters, .year-filters {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .tag-filter, .year-filter {
    padding: 0.5rem 0.75rem;
    border: 1px solid #ddd;
    background: white;
    border-radius: 6px;
    text-align: left;
    font-size: 0.9rem;
    cursor: pointer;
    transition: all 0.2s;
  }

  .tag-filter:hover, .year-filter:hover {
    background: #e9ecef;
    border-color: #adb5bd;
  }

  .tag-filter.active, .year-filter.active {
    background: #4a90e2;
    color: white;
    border-color: #4a90e2;
  }

  /* Main Content Styles */
  .writing-main {
    min-height: 400px;
  }

  .blog-count {
    font-size: 0.95rem;
    color: #666;
    margin-bottom: 1.5rem;
    font-weight: 500;
  }

  .blog-grid {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .blog-card {
    background: white;
    border: 1px solid #e9ecef;
    border-radius: 12px;
    transition: all 0.3s ease;
    overflow: hidden;
  }

  .blog-card:hover {
    border-color: #4a90e2;
    box-shadow: 0 4px 12px rgba(74, 144, 226, 0.1);
    transform: translateY(-2px);
  }

  .blog-card-link {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .blog-card-content {
    padding: 1.75rem;
  }

  .blog-card-title {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
    color: #1a1a1a;
    line-height: 1.3;
  }

  .blog-card-excerpt {
    font-size: 1rem;
    color: #555;
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  .blog-card-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: #888;
    margin-bottom: 1rem;
  }

  .meta-separator {
    color: #ddd;
  }

  .blog-card-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .blog-tag {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    background: #f1f3f5;
    color: #495057;
    border-radius: 4px;
    font-size: 0.8rem;
    font-weight: 500;
  }

  .no-results {
    text-align: center;
    padding: 3rem;
    color: #666;
    font-size: 1.1rem;
  }

  /* Responsive Design */
  @media (max-width: 968px) {
    .writing-layout {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .writing-sidebar {
      position: static;
    }
  }

  @media (max-width: 640px) {
    .writing-header h1 {
      font-size: 2rem;
    }

    .writing-subtitle {
      font-size: 1rem;
    }

    .blog-card-title {
      font-size: 1.25rem;
    }
  }
</style>

<script>
  // Client-side filtering and search functionality
  const searchInput = document.getElementById('search-input') as HTMLInputElement;
  const sortSelect = document.getElementById('sort-select') as HTMLSelectElement;
  const tagFilters = document.querySelectorAll('.tag-filter');
  const yearFilters = document.querySelectorAll('.year-filter');
  const blogGrid = document.getElementById('blog-grid');
  const visibleCount = document.getElementById('visible-count');
  const noResults = document.getElementById('no-results');

  let currentSearch = '';
  let currentTag = 'all';
  let currentYear = 'all';
  let currentSort = 'date-desc';

  // Search functionality
  searchInput?.addEventListener('input', (e) => {
    currentSearch = (e.target as HTMLInputElement).value.toLowerCase();
    filterAndSortBlogs();
  });

  // Sort functionality
  sortSelect?.addEventListener('change', (e) => {
    currentSort = (e.target as HTMLSelectElement).value;
    filterAndSortBlogs();
  });

  // Tag filter functionality
  tagFilters.forEach(button => {
    button.addEventListener('click', () => {
      tagFilters.forEach(btn => btn.classList.remove('active'));
      button.classList.add('active');
      currentTag = button.getAttribute('data-tag') || 'all';
      filterAndSortBlogs();
    });
  });

  // Year filter functionality
  yearFilters.forEach(button => {
    button.addEventListener('click', () => {
      yearFilters.forEach(btn => btn.classList.remove('active'));
      button.classList.add('active');
      currentYear = button.getAttribute('data-year') || 'all';
      filterAndSortBlogs();
    });
  });

  function filterAndSortBlogs() {
    const blogCards = Array.from(document.querySelectorAll('.blog-card')) as HTMLElement[];
    let visibleBlogs = 0;

    // Filter blogs
    blogCards.forEach(card => {
      const title = card.getAttribute('data-title') || '';
      const excerpt = card.getAttribute('data-excerpt') || '';
      const tags = card.getAttribute('data-tags') || '';
      const year = card.getAttribute('data-year') || '';

      const matchesSearch = !currentSearch ||
        title.includes(currentSearch) ||
        excerpt.includes(currentSearch);

      const matchesTag = currentTag === 'all' ||
        tags.split(',').includes(currentTag);

      const matchesYear = currentYear === 'all' ||
        year === currentYear;

      const isVisible = matchesSearch && matchesTag && matchesYear;

      if (isVisible) {
        card.style.display = 'block';
        visibleBlogs++;
      } else {
        card.style.display = 'none';
      }
    });

    // Sort visible blogs
    const visibleCards = blogCards.filter(card => card.style.display !== 'none');

    visibleCards.sort((a, b) => {
      const titleA = a.getAttribute('data-title') || '';
      const titleB = b.getAttribute('data-title') || '';
      const readingTimeA = parseInt(a.getAttribute('data-reading-time') || '0');
      const readingTimeB = parseInt(b.getAttribute('data-reading-time') || '0');

      switch (currentSort) {
        case 'date-asc':
          return 0; // Already sorted by date desc in HTML, reverse by moving to end
        case 'title-asc':
          return titleA.localeCompare(titleB);
        case 'title-desc':
          return titleB.localeCompare(titleA);
        case 'reading-time-asc':
          return readingTimeA - readingTimeB;
        case 'reading-time-desc':
          return readingTimeB - readingTimeA;
        default: // date-desc
          return 0;
      }
    });

    // Re-append sorted cards
    if (blogGrid) {
      visibleCards.forEach(card => blogGrid.appendChild(card));
    }

    // Update count
    if (visibleCount) {
      visibleCount.textContent = visibleBlogs.toString();
    }

    // Show/hide no results message
    if (noResults) {
      noResults.style.display = visibleBlogs === 0 ? 'block' : 'none';
    }
  }
</script>

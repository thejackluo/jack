---
import BaseLayout from '../../layouts/Base.astro';
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';

// Generate static paths for all blog posts
export async function getStaticPaths() {
  const blogs = await getCollection('blogs');
  return blogs.map((blog) => ({
    params: { slug: blog.slug },
    props: { blog },
  }));
}

// Get the blog from props (set by getStaticPaths)
const { blog } = Astro.props;

// Get all blogs for navigation
const allBlogs = await getCollection('blogs');
const sortedBlogs = allBlogs.sort((a, b) =>
  b.data.publishDate.getTime() - a.data.publishDate.getTime()
);

// Find current blog index and get prev/next
const currentIndex = sortedBlogs.findIndex(b => b.slug === blog.slug);
const prevBlog = currentIndex > 0 ? sortedBlogs[currentIndex - 1] : null;
const nextBlog = currentIndex < sortedBlogs.length - 1 ? sortedBlogs[currentIndex + 1] : null;

// Format date
const year = blog.data.publishDate.getFullYear();
const month = blog.data.publishDate.toLocaleString('default', { month: 'long' });
const day = blog.data.publishDate.getDate();
const formattedDate = `${month} ${day}, ${year}`;

// Render markdown content
const { Content } = await blog.render();

// Calculate reading time (average 200 words per minute)
// Try to access raw markdown content, fallback to default
let readingTime = 7; // Default fallback
try {
  // Astro content collections may have rawBody() method
  const rawContent = typeof blog.rawBody === 'function' ? blog.rawBody() : (blog.body || '');
  if (rawContent) {
    const wordCount = rawContent.split(/\s+/).filter(word => word.length > 0).length;
    readingTime = Math.max(1, Math.ceil(wordCount / 200));
  }
} catch (e) {
  // If body is not accessible, use default
  readingTime = 7;
}

// Author profile image path
const authorImage = '/assets/images/jack/main.jpg';
---

<BaseLayout
  title={`${blog.data.title} | Jack Luo`}
  description={blog.data.excerpt}
  currentPage="writing"
>
  <div slot="hero" class="landing-main horizontal-align container-fluid">
    <div class="container-fluid">
      <div class="landing-main-center row">
        <div class="col-12">
          <a href="/writing" class="back-link">← Back to Writing</a>

          <h2 class="blog-post-title">{blog.data.title}</h2>

          <div class="blog-card">
            <img
              class="blog-card-img"
              src={authorImage}
              alt="Jack Luo"
            />
            <div class="blog-card-text">
              <h3>Jack Luo</h3>
              <h4>{readingTime} minute read</h4>
            </div>
          </div>

          <div class="blog-post-content">
            <Content />
          </div>

          {blog.data.externalUrl && (
            <div class="blog-post-external">
              <a href={blog.data.externalUrl} target="_blank" rel="noopener noreferrer" class="external-link">
                Read original post →
              </a>
            </div>
          )}

          <nav class="blog-post-navigation">
            {prevBlog && (
              <a href={`/writing/${prevBlog.slug}`} class="nav-link nav-link-prev">
                <span class="nav-link-label">Previous</span>
                <span class="nav-link-title">{prevBlog.data.title}</span>
              </a>
            )}
            {nextBlog && (
              <a href={`/writing/${nextBlog.slug}`} class="nav-link nav-link-next">
                <span class="nav-link-label">Next</span>
                <span class="nav-link-title">{nextBlog.data.title}</span>
              </a>
            )}
          </nav>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  /* ============================================
     NATURAL PAGE SCROLL LAYOUT
     Footer only visible when scrolling to bottom
     ============================================ */

  /* Global layout structure - natural scroll */
  :global(body),
  :global(html) {
    background-color: #000;
    margin: 0;
    padding: 0;
    overflow-x: hidden;
    overflow-y: auto; /* Allow natural page scroll */
  }

  /* Fullpage: natural flow, no fixed height */
  :global(#fullpage) {
    display: flex !important;
    flex-direction: column !important;
    min-height: 100vh !important;
    background-color: #000;
    overflow: visible !important; /* Allow content to flow */
  }

  /* Landing: natural height, no scrolling container */
  :global(#landing) {
    background-color: #000;
    height: auto !important; /* Override blog.css height: 100% */
    overflow: visible !important; /* Override blog.css overflow: auto */
    position: relative !important;
  }

  /* Landing container: relative positioning, natural height */
  :global(.landing-container) {
    position: relative !important; /* Override landing.css absolute */
    height: auto !important; /* Override landing.css height: 100vh */
    width: 100% !important;
    background-color: #000;
  }

  /* Nav bar */
  :global(nav.navbar) {
    height: 15vh !important;
  }

  /* Content area: flows naturally, no internal scroll */
  .landing-main {
    padding: 2rem 1rem 3rem;
    width: 100%;
    background-color: #000;
    min-height: 60vh; /* Ensure some content height */
  }

  /* Footer: appears after content in document flow */
  :global(#footer) {
    z-index: 1 !important; /* Override writing.css z-index: -3 */
    position: relative !important;
    background: linear-gradient(180deg, rgba(20, 18, 60, 0.8) 0%, #000000 100%), #000000 !important;
  }

  /* Background filters - keep behind content */
  :global(.landing-angular-filter),
  :global(.landing-city) {
    position: fixed !important;
    z-index: -1 !important;
  }

  .landing-main-center {
    flex-direction: column !important;
    width: 100%;
    max-width: 900px;
    margin: 0 auto;
    align-items: center !important;
  }

  .landing-main-center .col-12 {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 0 2rem;
  }

  .back-link {
    display: inline-block;
    margin-bottom: 2rem;
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    font-size: 0.875rem;
    font-family: "PP Stellar", sans-serif;
    padding: 0.5rem 1rem;
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(10px);
    border-radius: 12px;
    border: 1px solid rgba(255, 255, 255, 0.08);
    transition: all 0.3s ease;
  }

  .back-link:hover {
    color: #fff;
    background: rgba(255, 255, 255, 0.08);
    border-color: rgba(255, 255, 255, 0.12);
    transform: translateX(-4px);
  }

  .blog-post-title {
    font-size: 2.5rem;
    margin: 0 0 2rem;
    color: #fff;
    line-height: 1.3;
    font-family: "Dual-300", sans-serif;
    font-weight: 300;
    text-align: center;
  }

  .blog-card {
    display: flex;
    flex-direction: row;
    margin: 2em 0;
    justify-content: center;
    align-items: center;
  }

  .blog-card-img {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    filter: drop-shadow(0px 0px 20px rgba(255, 255, 255, 0.5));
    transition: all 0.3s ease;
    object-fit: cover;
  }

  .blog-card-img:hover {
    transform: scale(1.05);
  }

  .blog-card-text {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    font-size: 1em;
    padding: 0.5em 0;
    margin-left: 2em;
  }

  .blog-card-text h3 {
    font-size: 1.25em;
    margin: 0;
    color: #fff;
    font-family: "Dual-300", sans-serif;
  }

  .blog-card-text h4 {
    font-size: 1em;
    margin: 0.25em 0 0;
    color: rgba(255, 255, 255, 0.7);
    font-family: "PP Stellar", sans-serif;
  }

  .blog-post-content {
    max-width: 800px;
    width: 100%;
    margin: 0 auto;
    color: rgba(255, 255, 255, 0.9);
    line-height: 1.7;
    font-size: 0.9375rem;
    font-family: "PP Stellar", sans-serif;
    text-align: left;
  }

  /* Hide duplicate author info from markdown content */
  .blog-post-content :global(blockquote:first-of-type),
  .blog-post-content :global(p:has(img[alt*="Jack"])) {
    display: none;
  }

  .blog-post-content :global(h1),
  .blog-post-content :global(h2),
  .blog-post-content :global(h3),
  .blog-post-content :global(h4) {
    color: #fff;
    margin-top: 2.5rem;
    margin-bottom: 1.25rem;
    font-family: "Dual-300", sans-serif;
    font-weight: 300;
  }

  .blog-post-content :global(h1) {
    font-size: 2.5rem;
  }

  .blog-post-content :global(h2) {
    font-size: 2rem;
  }

  .blog-post-content :global(h3) {
    font-size: 1.75rem;
  }

  .blog-post-content :global(h4) {
    font-size: 1.5rem;
  }

  .blog-post-content :global(p) {
    margin-bottom: 1.25rem;
    color: rgba(255, 255, 255, 0.85);
  }

  .blog-post-content :global(p b) {
    color: #fff;
    font-weight: 600;
  }

  .blog-post-content :global(ul),
  .blog-post-content :global(ol) {
    margin-bottom: 1.5rem;
    padding-left: 2rem;
    color: rgba(255, 255, 255, 0.85);
  }

  .blog-post-content :global(li) {
    margin-bottom: 0.5rem;
  }

  .blog-post-content :global(blockquote) {
    border-left: 3px solid rgba(255, 255, 255, 0.3);
    padding-left: 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    color: rgba(255, 255, 255, 0.8);
  }

  .blog-post-content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 2rem 0;
  }

  .blog-post-content :global(a) {
    color: rgba(255, 255, 255, 0.9);
    text-decoration: underline;
    text-decoration-color: rgba(255, 255, 255, 0.3);
    transition: all 0.2s ease;
  }

  .blog-post-content :global(a:hover) {
    color: #fff;
    text-decoration-color: rgba(255, 255, 255, 0.6);
  }

  .blog-post-external {
    margin: 2rem auto;
    text-align: center;
  }

  .external-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    background: rgba(255, 255, 255, 0.08);
    backdrop-filter: blur(10px);
    border-radius: 12px;
    color: #fff;
    text-decoration: none;
    border: 1px solid rgba(255, 255, 255, 0.1);
    transition: all 0.3s ease;
    font-family: "PP Stellar", sans-serif;
    font-size: 0.875rem;
  }

  .external-link:hover {
    background: rgba(255, 255, 255, 0.12);
    border-color: rgba(255, 255, 255, 0.15);
    transform: translateY(-2px);
  }

  .blog-post-navigation {
    margin: 3rem auto 0;
    display: flex;
    justify-content: space-between;
    gap: 1.5rem;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    max-width: 800px;
  }

  .nav-link {
    flex: 1;
    display: flex;
    flex-direction: column;
    padding: 1rem;
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(10px);
    border-radius: 12px;
    text-decoration: none;
    color: inherit;
    border: 1px solid rgba(255, 255, 255, 0.05);
    transition: all 0.3s ease;
  }

  .nav-link:hover {
    background: rgba(255, 255, 255, 0.08);
    border-color: rgba(255, 255, 255, 0.1);
    transform: translateY(-2px);
  }

  .nav-link-label {
    font-size: 0.6875rem;
    color: rgba(255, 255, 255, 0.5);
    margin-bottom: 0.5rem;
    font-family: "PP Stellar", sans-serif;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .nav-link-title {
    font-size: 0.8125rem;
    color: rgba(255, 255, 255, 0.9);
    line-height: 1.4;
    font-family: "Dual-300", sans-serif;
  }

  .nav-link-next {
    text-align: right;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .landing-main {
      padding: 1.5rem 1rem 2rem;
    }

    .blog-post-title {
      font-size: 2rem;
    }

    .blog-card-img {
      width: 50px;
      height: 50px;
    }

    .blog-card-text {
      margin-left: 1rem;
      font-size: 0.7em;
    }

    .blog-post-content {
      font-size: 0.875rem;
      padding: 0 1rem;
    }

    .blog-post-content :global(h1) {
      font-size: 2rem;
    }

    .blog-post-content :global(h2) {
      font-size: 1.75rem;
    }

    .blog-post-content :global(h3) {
      font-size: 1.5rem;
    }

    .blog-post-navigation {
      flex-direction: column;
      gap: 1rem;
    }

    .nav-link-next {
      text-align: left;
    }
  }

  @media (max-width: 576px) {
    .blog-post-title {
      font-size: 1.75rem;
    }

    .blog-card-img {
      width: 40px;
      height: 40px;
    }

    .blog-post-content {
      font-size: 0.8125rem;
    }

    .blog-post-content :global(h1) {
      font-size: 1.75rem;
    }

    .blog-post-content :global(h2) {
      font-size: 1.5rem;
    }

    .blog-post-content :global(h3) {
      font-size: 1.25rem;
    }
  }
</style>

---
import BaseLayout from '../../layouts/Base.astro';
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';

// Generate static paths for all blog posts
export async function getStaticPaths() {
  const blogs = await getCollection('blogs');
  return blogs.map((blog) => ({
    params: { slug: blog.slug },
    props: { blog },
  }));
}

// Get the blog from props (set by getStaticPaths)
const { blog } = Astro.props;

// Get all blogs for navigation
const allBlogs = await getCollection('blogs');
const sortedBlogs = allBlogs.sort((a, b) => 
  b.data.publishDate.getTime() - a.data.publishDate.getTime()
);

// Find current blog index and get prev/next
const currentIndex = sortedBlogs.findIndex(b => b.slug === blog.slug);
const prevBlog = currentIndex > 0 ? sortedBlogs[currentIndex - 1] : null;
const nextBlog = currentIndex < sortedBlogs.length - 1 ? sortedBlogs[currentIndex + 1] : null;

// Format date
const year = blog.data.publishDate.getFullYear();
const month = blog.data.publishDate.toLocaleString('default', { month: 'long' });
const day = blog.data.publishDate.getDate();
const formattedDate = `${month} ${day}, ${year}`;

// Render markdown content
const { Content } = await blog.render();
---

<BaseLayout 
  title={`${blog.data.title} | Jack Luo`}
  description={blog.data.excerpt}
  currentPage="writing"
>
  <article class="blog-post">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="blog-post-header">
            <a href="/writing" class="back-link">← Back to Writing</a>
            
            {blog.data.heroImage && (
              <div class="blog-post-hero">
                <img 
                  src={blog.data.heroImage} 
                  alt={blog.data.title}
                  class="blog-post-hero-img"
                />
              </div>
            )}

            <div class="blog-post-meta">
              <h1 class="blog-post-title">{blog.data.title}</h1>
              <div class="blog-post-meta-info">
                <time class="blog-post-date" datetime={blog.data.publishDate.toISOString()}>
                  {formattedDate}
                </time>
                {blog.data.tags.length > 0 && (
                  <div class="blog-post-tags">
                    {blog.data.tags.map(tag => (
                      <span class="blog-tag">{tag}</span>
                    ))}
                  </div>
                )}
              </div>
              {blog.data.excerpt && (
                <p class="blog-post-excerpt">{blog.data.excerpt}</p>
              )}
            </div>
          </div>

          <div class="blog-post-content">
            <Content />
          </div>

          {blog.data.externalUrl && (
            <div class="blog-post-external">
              <a href={blog.data.externalUrl} target="_blank" rel="noopener noreferrer" class="external-link">
                Read original post →
              </a>
            </div>
          )}

          <nav class="blog-post-navigation">
            {prevBlog && (
              <a href={`/writing/${prevBlog.slug}`} class="nav-link nav-link-prev">
                <span class="nav-link-label">Previous</span>
                <span class="nav-link-title">{prevBlog.data.title}</span>
              </a>
            )}
            {nextBlog && (
              <a href={`/writing/${nextBlog.slug}`} class="nav-link nav-link-next">
                <span class="nav-link-label">Next</span>
                <span class="nav-link-title">{nextBlog.data.title}</span>
              </a>
            )}
          </nav>
        </div>
      </div>
    </div>
  </article>
</BaseLayout>

<style>
  .blog-post {
    padding: 4rem 2rem;
    min-height: 80vh;
  }

  .blog-post-header {
    max-width: 800px;
    margin: 0 auto 4rem;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 2rem;
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    font-size: 0.875rem;
    font-family: "PP Stellar", sans-serif;
    padding: 0.5rem 1rem;
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(10px);
    border-radius: 12px;
    border: 1px solid rgba(255, 255, 255, 0.08);
    transition: all 0.3s ease;
  }

  .back-link:hover {
    color: #fff;
    background: rgba(255, 255, 255, 0.08);
    border-color: rgba(255, 255, 255, 0.12);
    transform: translateX(-4px);
  }

  .blog-post-hero {
    margin-bottom: 3rem;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0px 10px 40px rgba(0, 0, 0, 0.3);
  }

  .blog-post-hero-img {
    width: 100%;
    height: auto;
    max-height: 450px;
    object-fit: cover;
    display: block;
    filter: drop-shadow(0px 0px 30px rgba(255, 255, 255, 0.1));
  }

  .blog-post-meta {
    text-align: center;
    padding: 2rem;
    background: radial-gradient(
      50% 50% at 50% 50%,
      rgba(217, 217, 217, 0.05) 0%,
      rgba(217, 217, 217, 0.02) 100%
    );
    backdrop-filter: blur(50px);
    border-radius: 20px;
    border: 1px solid rgba(255, 255, 255, 0.05);
  }

  .blog-post-title {
    font-size: 2.75rem;
    margin: 0 0 1.5rem;
    color: #fff;
    line-height: 1.2;
    font-family: "Elianto-Regular", sans-serif;
  }

  .blog-post-meta-info {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1.25rem;
    align-items: center;
    margin-bottom: 1.5rem;
  }

  .blog-post-date {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.55);
    font-family: "PP Stellar", sans-serif;
  }

  .blog-post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.625rem;
    justify-content: center;
  }

  .blog-tag {
    font-size: 0.75rem;
    padding: 0.375rem 0.875rem;
    background: rgba(255, 255, 255, 0.12);
    backdrop-filter: blur(10px);
    border-radius: 16px;
    color: rgba(255, 255, 255, 0.85);
    border: 1px solid rgba(255, 255, 255, 0.08);
    font-family: "PP Stellar", sans-serif;
  }

  .blog-post-excerpt {
    font-size: 1.25rem;
    color: rgba(255, 255, 255, 0.75);
    line-height: 1.7;
    margin: 0;
    font-style: italic;
    font-family: "PP Stellar", sans-serif;
  }

  .blog-post-content {
    max-width: 700px;
    margin: 0 auto 4rem;
    color: rgba(255, 255, 255, 0.9);
    line-height: 1.9;
    font-size: 1.125rem;
    font-family: "PP Stellar", sans-serif;
  }

  .blog-post-content :global(h1),
  .blog-post-content :global(h2),
  .blog-post-content :global(h3),
  .blog-post-content :global(h4) {
    color: #fff;
    margin-top: 2.5rem;
    margin-bottom: 1.25rem;
    font-family: "Dual-300", sans-serif;
    font-weight: 300;
  }

  .blog-post-content :global(h1) {
    font-size: 2.25rem;
  }

  .blog-post-content :global(h2) {
    font-size: 1.875rem;
  }

  .blog-post-content :global(h3) {
    font-size: 1.5rem;
  }

  .blog-post-content :global(p) {
    margin-bottom: 1.75rem;
  }

  .blog-post-content :global(ul),
  .blog-post-content :global(ol) {
    margin-bottom: 1.75rem;
    padding-left: 2.5rem;
  }

  .blog-post-content :global(li) {
    margin-bottom: 0.75rem;
  }

  .blog-post-content :global(blockquote) {
    border-left: 4px solid rgba(255, 255, 255, 0.3);
    padding-left: 2rem;
    margin: 2.5rem 0;
    font-style: italic;
    color: rgba(255, 255, 255, 0.85);
    background: rgba(255, 255, 255, 0.03);
    padding: 1.5rem 2rem;
    border-radius: 12px;
    backdrop-filter: blur(10px);
  }

  .blog-post-content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 12px;
    margin: 2.5rem 0;
    box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.3);
  }

  .blog-post-content :global(a) {
    color: rgba(255, 255, 255, 0.9);
    text-decoration: underline;
    text-decoration-color: rgba(255, 255, 255, 0.3);
    transition: all 0.2s ease;
  }

  .blog-post-content :global(a:hover) {
    color: #fff;
    text-decoration-color: rgba(255, 255, 255, 0.6);
  }

  .blog-post-external {
    max-width: 700px;
    margin: 0 auto 3rem;
    text-align: center;
  }

  .external-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    background: radial-gradient(
      50% 50% at 50% 50%,
      rgba(217, 217, 217, 0.1) 0%,
      rgba(217, 217, 217, 0.05) 100%
    );
    backdrop-filter: blur(50px);
    border-radius: 16px;
    color: #fff;
    text-decoration: none;
    border: 1px solid rgba(255, 255, 255, 0.1);
    transition: all 0.3s ease;
    font-family: "PP Stellar", sans-serif;
  }

  .external-link:hover {
    background: radial-gradient(
      50% 50% at 50% 50%,
      rgba(217, 217, 217, 0.15) 0%,
      rgba(217, 217, 217, 0.08) 100%
    );
    border-color: rgba(255, 255, 255, 0.15);
    transform: translateY(-2px);
    box-shadow: 0px 5px 20px rgba(0, 0, 0, 0.2);
  }

  .blog-post-navigation {
    max-width: 800px;
    margin: 4rem auto 0;
    display: flex;
    justify-content: space-between;
    gap: 2rem;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .nav-link {
    flex: 1;
    display: flex;
    flex-direction: column;
    padding: 1.5rem;
    background: radial-gradient(
      50% 50% at 50% 50%,
      rgba(217, 217, 217, 0.05) 0%,
      rgba(217, 217, 217, 0.02) 100%
    );
    backdrop-filter: blur(50px);
    border-radius: 16px;
    text-decoration: none;
    color: inherit;
    border: 1px solid rgba(255, 255, 255, 0.05);
    transition: all 0.3s ease;
  }

  .nav-link:hover {
    background: radial-gradient(
      50% 50% at 50% 50%,
      rgba(217, 217, 217, 0.08) 0%,
      rgba(217, 217, 217, 0.04) 100%
    );
    border-color: rgba(255, 255, 255, 0.1);
    transform: translateY(-2px);
  }

  .nav-link-label {
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.5);
    margin-bottom: 0.75rem;
    font-family: "PP Stellar", sans-serif;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .nav-link-title {
    font-size: 0.9375rem;
    color: rgba(255, 255, 255, 0.9);
    line-height: 1.5;
    font-family: "Dual-300", sans-serif;
  }

  .nav-link-next {
    text-align: right;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .blog-post {
      padding: 2rem 1rem;
    }

    .blog-post-header {
      margin-bottom: 3rem;
    }

    .blog-post-meta {
      padding: 1.5rem;
    }

    .blog-post-title {
      font-size: 2rem;
    }

    .blog-post-excerpt {
      font-size: 1.125rem;
    }

    .blog-post-content {
      font-size: 1rem;
      margin-bottom: 3rem;
    }

    .blog-post-content :global(h1) {
      font-size: 1.875rem;
    }

    .blog-post-content :global(h2) {
      font-size: 1.5rem;
    }

    .blog-post-content :global(h3) {
      font-size: 1.25rem;
    }

    .blog-post-navigation {
      flex-direction: column;
      gap: 1rem;
    }

    .nav-link-next {
      text-align: left;
    }
  }

  @media (max-width: 576px) {
    .blog-post {
      padding: 1.5rem 1rem;
    }

    .blog-post-title {
      font-size: 1.75rem;
    }

    .blog-post-meta {
      padding: 1.25rem;
    }

    .blog-post-content {
      font-size: 0.9375rem;
    }
  }
</style>

